#!/bin/sh
if [ ! -z "$KAKSESSION" ];
then
  case `uname` in
    Darwin)
      KAKPID=$(ps -u $USER -ex | grep -v "grep" | grep "kak -d -s $KAKSESSION\$" | head | grep -o '[0-9]\+' | head -1)
    ;;
    Linux)
      # KAKPID=$(ps -u $USER -ef | grep -v "grep" | grep "kak -d -s $KAKSESSION\$" | head | grep -o '[0-9]\+' | head -1)
      KAKPID=$(ps -u $USER -f | grep -v "grep" | grep "kak -d -s $KAKSESSION\$" | head | grep -o '[0-9]\+' | head -1)
      # commands for Linux go here
    ;;
    FreeBSD)
      # commands for FreeBSD go here
    ;;
  esac
  echo $KAKPID
else
echo ""
fi
